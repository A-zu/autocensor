    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "env": {
                "DEBUG_MODE": "1"
            }
        },
        {
            "name": "Benchmark: Process Files",
            "type": "debugpy",
            "request": "launch",
            "module": "uv",
            "args": [
                "run",
                "pytest",
                "benchmarks/",
                "--benchmark-only",
                "--benchmark-time-unit=s"
            ],
            "console": "integratedTerminal"
        }
    ]
}